@model hrms_min_ASP_Net_Core_Project.Models.Employee

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Employee</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data" >
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Desigantion" class="control-label"></label>
                <input asp-for="Desigantion" class="form-control" />
                <span asp-validation-for="Desigantion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="JoingDate" class="control-label"></label>
                <input asp-for="JoingDate" class="form-control" />
                <span asp-validation-for="JoingDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Salary" class="control-label"></label>
                <input asp-for="Salary" class="form-control" />
                <span asp-validation-for="Salary" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="ProfileImage" />
            @if(Model.ProfileImage != null)
            {
                <div class="mb-2">
                <img src="~/image/@Model.ProfileImage" width="100" />
                </div>
            }
            <div class="form-group">
                <label class="control-label">Upload Imgae</label>
                <input type="file" name="ImageFile" class="form-control" accept=".jpg,.jpeg,.pdf,.png,.webp" />
                @* <span asp-validation-for="ProfileImage" class="text-danger"></span> *@
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
