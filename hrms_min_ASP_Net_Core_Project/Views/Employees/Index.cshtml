@model IEnumerable<hrms_min_ASP_Net_Core_Project.Models.Employee>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
@if (TempData["InsertMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
        @TempData["InsertMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}
@if (TempData["DeleteMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
        @TempData["DeleteMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-striped-columns table-bordered table-hover align-middle text-center shadow-sm">
    <thead>
        <tr class="table-dark table-bordered">
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Desigantion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JoingDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Salary)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProfileImage)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Desigantion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.JoingDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Salary)
            </td>
            <td>
                @* @Html.DisplayFor(modelItem => item.ProfileImage) *@
                    @if (!string.IsNullOrEmpty(item.ProfileImage))
                    {
                        <img src="~/image/@item.ProfileImage" width="60" height="60" class="rounded-circle" />
                        
                    }else
                    {
                        <img src="~/image/no_image.png" width="60" height="60" class="rounded-circle" />
                    }
                </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
