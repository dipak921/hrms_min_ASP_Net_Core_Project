@model IEnumerable<hrms_min_ASP_Net_Core_Project.Models.Employee>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

@using (Html.BeginForm("Index", "Employees", FormMethod.Get))
{
    <div class="row">
        <div class="col-md-2">
            <input type="text" name="searchString" value="@ViewBag.CurrentFilter" class="form-control" placeholder="Search by name..." />
        </div>
        <div class="col-md-2">
            <select name="designationFilter" asp-items="ViewBag.DesignationFilter" class="form-control">
                <option value="">-- All Designations --</option>
                
            </select>
        </div>
        <!-- From Date -->
    <div class="col-md-2">
        <input type="date" name="fromDate" value="@ViewBag.FromDate" class="form-control" />
    </div>

    <!-- To Date -->
    <div class="col-md-2">
        <input type="date" name="toDate" value="@ViewBag.ToDate" class="form-control" />
    </div>

        <div class="col-md-2">
            <button type="submit" class="btn btn-primary">Search & Filter</button>
        </div>
    </div>
      
}


@if (TempData["InsertMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
        @TempData["InsertMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}
@if (TempData["DeleteMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
        @TempData["DeleteMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<p>
    <a asp-action="Create" class="btn btn-primary mt-2">Create New</a>
</p>
<table class="table table-striped-columns table-bordered table-hover align-middle text-center shadow-sm">
    <thead>
        <tr class="table-dark table-bordered">
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Desigantion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JoingDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Salary)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProfileImage)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
{
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Desigantion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.JoingDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Salary)
            </td>
            <td>
                @* @Html.DisplayFor(modelItem => item.ProfileImage) *@
                    @if (!string.IsNullOrEmpty(item.ProfileImage))
                    {
                        <img src="~/image/@item.ProfileImage" width="60" height="60" class="rounded-circle" />
                        
                    }else
                    {
                        <img src="~/image/no_image.png" width="60" height="60" class="rounded-circle" />
                    }
                </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
            </td>
        </tr>
            }
            }
            else
            {
                  <tr>
        <td colspan="6" class="text-center">
            <div class="alert alert-warning mt-3">
                <strong>No Data Found!</strong> There are no records to display at this time.
            </div>
        </td>
    </tr>
            }
          

    </tbody>
</table>

<nav aria-label="Page navigation example">
    <ul class="pagination">
        @for (int i = 1; i <= (int)ViewBag.TotalPages; i++)
        {
            <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                <a class="page-link" href="@Url.Action("Index", new { page = i,
                    searchString = ViewBag.CurrentFilter,
                    designationFilter = ViewBag.SelectedDesignation })">@i</a>
            </li>
        }
    </ul>
</nav>
